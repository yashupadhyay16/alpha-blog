<h1>New Article</h1>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <p> 
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%=f.label :desciption %> <br/>
        <%=f.text_area :description %>
    </p>
    <p>
        <%=f.submit %>
    </p>
    


<% end %>   